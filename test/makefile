#--------------------------------------------------- 
# Target file
#---------------------------------------------------
TARGET = client

#---------------------------------------------------
# Compiler
#---------------------------------------------------
CC = gcc

#---------------------------------------------------
# Options passed to the compiler
#---------------------------------------------------
CFLAGS = -Wall -std=gnu99
DBGFLAGS = -g -O0

#---------------------------------------------------
# Modules loaded
#---------------------------------------------------
LIB_RTS = -lrts

#--------------------------------------------------- 
# Compile and create objects
#---------------------------------------------------

.PHONY: all clean

all: $(TARGET)
	
$(TARGET): 
	$(CC) $(CFLAGS) $(DBGFLAGS) $(TARGET).c $(LIB_RTS) -o $@

clean:
	@rm -rf $(TARGET)